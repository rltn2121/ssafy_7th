package board.service;

import board.dao.UserDao;
import board.dao.UserDaoImpl;
import board.dto.UserDto;

public class UserServiceImpl implements UserService{
	UserDao userDao = UserDaoImpl.getInstance();

	private UserServiceImpl() {};
	private static UserServiceImpl instance = new UserServiceImpl();
	public static UserServiceImpl getInstance() {
		return instance;
	}
	
	
	@Override
	public UserDto register(String userName, String userEmail, String userPassword) {
		UserDto dto = new UserDto();
		dto.setUserName(userName);
		dto.setUserEmail(userEmail);
		dto.setUserPassword(userPassword);
		
		int result = userDao.register(dto);
		
		if(userDto != null && userDto.getUserPassword().equals(userPassword))
			System.out.println("Login Success!!");
		else
			System.out.println("Login Fail!!");
		
		return userDto;
	}

}
